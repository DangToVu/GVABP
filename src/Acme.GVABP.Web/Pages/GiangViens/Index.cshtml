@page
@using Acme.GVABP.Localization
@using Acme.GVABP.Web.Pages.GiangViens
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<GVABPResource> L
@section scripts
{
    <abp-script src="/Pages/GiangViens/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["GiangViens"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewGiangVienButton"
                            text="@L["NewGiangVien"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>

    <abp-card-body>
        <abp-table striped-rows="true" id="GiangViensTable"></abp-table>
    </abp-card-body>
</abp-card>
